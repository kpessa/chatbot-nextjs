# API Keys for LLM providers
# Replace these with your actual API keys in .env.local (not committed to git)

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key
# Get from: https://console.anthropic.com/settings/keys
NEXT_PUBLIC_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Deepseek API Key
# Get from: https://platform.deepseek.com/api-keys
NEXT_PUBLIC_DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Optional: Set default model
# Options: gpt-4, gpt-3.5-turbo, claude-3-opus, claude-3-sonnet, deepseek-chat
NEXT_PUBLIC_DEFAULT_MODEL=gpt-4

# Optional: Maximum file size for uploads (in MB)
NEXT_PUBLIC_MAX_FILE_SIZE=10

# Optional: Enable/disable file uploads (true/false)
NEXT_PUBLIC_ALLOW_FILE_UPLOADS=true

# API Base URLs (optional, defaults to official endpoints)
OPENAI_API_BASE_URL=https://api.openai.com/v1
ANTHROPIC_API_BASE_URL=https://api.anthropic.com
DEEPSEEK_API_BASE_URL=https://api.deepseek.com

# Application settings
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/png,image/jpeg,application/pdf,text/plain 